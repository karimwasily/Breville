<VirtualHost *:80>

ServerName  breville.com
ServerAlias dev-new.breville.com dev.breville.com
ServerAlias uat-new.breville.com uat.breville.com
ServerAlias www.breville.com

DocumentRoot ${DOCROOT}

<IfModule mod_headers.c>
  Header add X-Vhost "publish"
</IfModule>

<IfModule disp_apache2.c>
	# if turned to 1, the dispatcher uses the URL already processed
	# by handlers preceeding the dispatcher (i.e. mod_rewrite)
	# instead of the original one passed to the web server.
	DispatcherUseProcessedURL On
	# Default value of 0 but if its set to 1 then the dispatcher will have apache handle all errors
	# If set to a string of error numbers it will only hand off those errors to apache to handle
  #DispatcherPassError		403,404
	DispatcherPassError		1
</IfModule>

<Directory />
  <IfModule disp_apache2.c>
    # Some items cache with the wrong mime type
    # Use this option to use the name to auto-detect mime types when cached improperly
    ModMimeUsePathInfo On
    # Use this option to avoid cache poisioning
    # Sling will return /content/image.jpg as well as /content/image.jpg/ but apache can't search /content/image.jpg/ as a file
    # Apache will treat that like a directory.  This assures the last slash is never stored in cache
    DirectorySlash Off
    # Enable the dispatcher file handler for apache to fetch files from AEM
    SetHandler dispatcher-handler
  </IfModule>
  Options FollowSymLinks
  AllowOverride None
  # Insert filter
  SetOutputFilter DEFLATE
  # Don't compress images
  SetEnvIfNoCase Request_URI \.(?:gif|jpe?g|png)$ no-gzip dont-vary
  # Make sure proxies don't deliver the wrong content
  Header append Vary User-Agent env=!dont-vary
  # Prevent clickjacking
  Header always append X-Frame-Options SAMEORIGIN
</Directory>

<Directory "${DOCROOT}">
  AllowOverride None
  Require all granted
</Directory>


<IfModule mod_rewrite.c>

  RewriteEngine	on

  RewriteRule      ^/$     /content/breville/us/en/home/index.html [PT,L]
  RewriteRule     ^/content/breville/(.*\.html)$     /$1 [R=302,L]
  RewriteRule     ^(/content.*)$  $1 [PT,L]
  RewriteRule     ^/(.*\.html)$   /content/breville/$1 [PT,L]


  #Rule for coffeehub fragments pages
	RewriteCond %{REQUEST_URI} ^/(.*)?/modals/(.*)
	RewriteRule  ^\/(.*)\/modals/(.*) /content/experience-fragments/coffeehub/modals/$2 [PT,L]

  #Rule for machine-selection pages
  RewriteRule "^/step1$" "https://%{HTTP_HOST}/content/breville/language-masters/en/machine-selection/$1" [PT,QSA,NC,L]

  RewriteCond %{REQUEST_URI} !^/apps
  RewriteCond %{REQUEST_URI} !^/bin
	RewriteCond %{REQUEST_URI} !^/content
	RewriteCond %{REQUEST_URI} !^/etc
	RewriteCond %{REQUEST_URI} !^/home
	RewriteCond %{REQUEST_URI} !^/libs
	RewriteCond %{REQUEST_URI} !^/system
	RewriteCond %{REQUEST_URI} !^/tmp
	RewriteCond %{REQUEST_URI} !^/var
	RewriteCond %{REQUEST_URI} !^/robots.txt [NC]
	RewriteRule ^/(.*)$ /content/breville/$1 [PT,L]

  # Custom Error Files.
  <LocationMatch "/content/breville/language-masters/en">
  ErrorDocument 500 /language-masters/en/errors/500.html
  ErrorDocument 404 /language-masters/en/errors/404.html
  </LocationMatch>
  
  #US Site
  <LocationMatch "/content/breville/us/en">
  ErrorDocument 500 /us/en/errors/500.html
  ErrorDocument 404 /us/en/errors/404.html
  </LocationMatch>

  # Fix to force short URL by re-writting the href response.
  AddOutputFilterByType Substitute text/html
  Substitute "s|href=\"\/content\/breville\/(.*?)\.html|href=\"/$1.html|i"
  Substitute "s|action=\"\/content\/breville\/(.*?)\.html|action=\"/$1.html|i"

Include conf.d/rewrites/rewrite.rules
 </IfModule>
</VirtualHost>
